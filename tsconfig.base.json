{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@gridweaver/source"],
    "baseUrl": ".",
    "paths": {
      "@gridweaver/core": ["libs/core/src/index.ts"],
      "@gridweaver/db-mongodb": ["libs/db-mongodb/src/index.ts"],
      "@gridweaver/api-hono": ["libs/api-hono/src/index.ts"],
      "@gridweaver/react": ["libs/react/src/index.ts"]
    }
  }
}
